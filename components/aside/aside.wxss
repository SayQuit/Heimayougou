/* components/aside/aside.wxss */
page{
  height: 100%;
}
.leftaside{
  flex:2;
  /* background-color: yellowgreen; */
  height: 100%;
  text-align: center;
  /* padding-bottom: 10px; */
  display: inline-block;

}
.leftaside view{
  margin-top: 35rpx;
  margin-bottom: 35rpx;
  text-align: center;
}

.rightaside{
  flex: 6;
  /* background-color: teal; */
  /* height: 100%; */
  height:calc(100vh)
}
.container{
  /* height: 100%; */
  overflow: hidden;
  display: flex;
  height:calc(100vh)
  
}
.current{
  color: #eb4450;
}

.title{
  text-align: center;
  margin-bottom: 30rpx;
}
.block{
  display: inline-block;
  width: 32%;
  height: 150rpx;
  position: relative;
}
.block>.text{
  width: 100%;
  height: 20%;
  position: absolute;
  top: 70%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 10px;
}
.block>image{
  height: 70%;
  width: 100%;
}