.nav{
  display: flex;
  background-color: #EEE;
  width: 100%;
  height: 80rpx;
}
.nav-item{
  height: 60rpx;
  text-align: center;
  border: 1px solid #DDD;
  margin-top: 10rpx;
  line-height: 60rpx;
  background-color: #FFF;
  margin-left: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.nav-currentitem{
  color: #eb4450;
  border-color: #eb4450;
}
.cartTitle {
  width: 100%;
  padding-left: 40rpx;
  font-size: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #eb4450;
  border-bottom: 1px solid #eb4450;
  line-height: 100rpx;
}

.cartGood {
  height: 220rpx;
  display: flex;

}

.cartGood-selectBtn {
  flex: 1;
  position: relative;
}

.cartGood-selectBtn checkbox {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.cartGood-goodImg {
  flex: 2;
}

.cartGood-desc {
  flex: 4;
  margin-top: 30rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;

}

.cartGood-desc-text {
  width: 100%;
  height: 40%;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.cartGood-desc-shop {
  margin-top: 30rpx;
  width: 100%;
  height: 40%;
}

.cartGood-desc-price {
  height: 100%;
  width: 40%;
  display: inline-block;
  vertical-align: bottom;
  color: #eb4450;
  font-size: 32rpx;
}

.cartGood-desc-goodNum {
  height: 100%;
  width: 60%;
  display: inline-block;
  vertical-align: bottom;
}
.cartGood-desc-goodNum-btn{
  display: inline-block;
  font-size: 35rpx;
  border: 1px solid;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  color: #999;
  vertical-align: top;
}
.cartGood-desc-goodNum-inputNum{
  display: inline-block;
  width: 100rpx;
  text-align: center;
  vertical-align: top;
}