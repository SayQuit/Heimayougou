.userbackground{
  width: 100%;
  position: relative;
  height:400rpx;
}
.userbackground-img{
  position: absolute;
  height: 100%;
  filter: blur(10rpx);
}
.userbackground-profilepicture{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
}
.userbackground-profilepicture image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.userbackground-name{
  position: absolute;
  top: 70%;
  left: 50%;
  transform: translateX(-50%);
}

.login{
  width: 100%;
  position: relative;
  height:400rpx;
  background-color:#eb4450;
  box-sizing: border-box;
  border: 5px solid white;
}
.login-button{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 200rpx;
  height: 135rpx;
  color: white;
  border: 1px solid white;
  text-align: center;
  line-height: 135rpx;
  
}