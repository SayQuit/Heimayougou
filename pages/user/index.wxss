
.userbackground {
  width: 100%;
  position: relative;
  height: 400rpx;
}

.userbackground-img {
  position: absolute;
  height: 100%;
  filter: blur(10rpx);
}

.userbackground-profilepicture {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
}

.userbackground-profilepicture image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.userbackground-name {
  position: absolute;
  top: 70%;
  left: 50%;
  transform: translateX(-50%);
}

.login {
  width: 100%;
  position: relative;
  height: 400rpx;
  background-color: #eb4450;
  box-sizing: border-box;
  border: 5px solid white;
}

.login-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 200rpx;
  height: 135rpx;
  color: white;
  border: 1px solid white;
  text-align: center;
  line-height: 135rpx;

}

.bottom {
  width: 100%;
  height: auto;
  background-color: #DDD;
  padding-bottom: 20rpx;
}

.bottom-list {
  width: 90%;
  opacity: 1;
  margin: 0 auto;
  height: auto;
  color: #777;
  margin-top: -50rpx;
  overflow: visible;
  filter: blur(0);

}

.bottom-list-nav {
  background-color: white;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.bottom-list-nav-navItem {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.bottom-list-nav-navItem-num {
  width: 100%;
  flex: 1;
  text-align: center;
  line-height: 50rpx;
  color: #eb4450;
}

.bottom-list-nav-navItem-desc {
  width: 100%;
  flex: 1;
  text-align: center;
  line-height: 50rpx;

}

.bottom-list-order {
  width: 100%;
  height: 220rpx;
  margin-top: 30rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.bottom-list-order-myorder {
  flex: 4;
  border-bottom: 1px solid #bbb;
  width: 100%;
  line-height: 88rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.bottom-list-order-ordernav {
  flex: 6;
  width: 100%;
  display: flex;
}

.bottom-list-order-ordernav-item {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.bottom-list-order-ordernav-item-image {
  width: 100%;
  flex: 6;
  position: relative;
}

.bottom-list-order-ordernav-item-image view {
  width: auto;
  height: auto;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateY(-50%) translateX(-50%);
  color:#eb4450
  

}

.bottom-list-order-ordernav-item-name {
  width: 100%;
  flex: 3;
  text-align: center;
}

.bottom-list-item {
  width: 100%;
  height: 70rpx;
  background-color: white;
  line-height: 70rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.bottom-list-addressManage {
  margin-top: 30rpx;
}

.bottom-list-contactCustomer {
  margin-top: 30rpx;
  border-bottom: 1px solid#bbb;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.bottom-list-contactCustomer-left {
  float: left;
}

.bottom-list-contactCustomer-right {
  float: right;
}

.bottom-list-opinion {
  border-bottom: 1px solid#bbb;
}

