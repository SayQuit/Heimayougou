.goodsblock {
  height: 150rpx;
}

.desc {
  position: relative;
  width: 60%;
  float: left;
  height: 100%;
}

.desc>text {
  position: absolute;
  top: 70%;
  left: 4%;
  color: orange;
  font-size: 28rpx;
}

.desc>view {
  margin: 20rpx 20rpx;
  width:90%;
	word-break:break-all;
	display:-webkit-box;
	-webkit-line-clamp:2;
	-webkit-box-orient:vertical;
	overflow:hidden;
}